			increaseIndentPattern: "(?x)(^.*\{("(?:[^"\\]|\\.)*"|[^"/}])*($|/[/*]))|(^.*\[("(?:[^"\\]|\\.)*"|[^"/\]])*($|/[/*]))"
			indentSquareBrackets: true
			shellVariables: [
