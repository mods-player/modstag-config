	<dict>
		<key>scope</key>
		<string>source.modstag</string>
		<key>settings</key>
		<dict>
			<key>decreaseIndentPattern</key>
			<string>(?x)
				(
					^("(?:[^"\\]|\\.)*"|[^"/{\n])*\}.*$
				)
				|
				(
					^("(?:[^"\\]|\\.)*"|[^"/(\n])*\).*$
				)
				|
				(
					^(.*\*/)?\s*\].*$
				)
			</string>
			<key>increaseIndentPattern</key>
			<string>(?x)
				(
					^.*\{("(?:[^"\\]|\\.)*"|[^"/}])*($|/[/*])
				)
				|
				(
					^.*\[("(?:[^"\\]|\\.)*"|[^"/\]])*($|/[/*])
				)
			</string>
			<key>indentSquareBrackets</key>
			<true/>
			<key>shellVariables</key>
			<array>
				<dict>
					<key>name</key>
